---
import { education } from '../data/education.js';
---

<section id="experience" class="py-20 bg-gray-50">
  <div class="section-container">
    <p class="text-accent font-medium mb-2">Background</p>
    <h2 class="section-title">Education & Experience</h2>
    
    <div class="grid lg:grid-cols-2 gap-12">
      <!-- Education -->
      <div>
        <h3 class="text-2xl font-serif font-semibold text-primary mb-6 flex items-center">
          <i class="fas fa-graduation-cap text-accent mr-3"></i>Education
        </h3>
        <div class="space-y-6">
          {education.map((edu) => (
            <div class="relative pl-8 border-l-2 border-accent/30">
              <div class="absolute -left-2 top-0 w-4 h-4 rounded-full bg-accent"></div>
              <span class="text-sm text-accent font-medium">{edu.period}</span>
              <h4 class="text-lg font-semibold text-primary mt-1">{edu.degree}</h4>
              <p class="text-gray-600">{edu.institution}</p>
              <p class="text-sm text-gray-500">{edu.location}</p>
              {edu.note && (
                <p class="text-sm text-gray-500 italic mt-1">{edu.note}</p>
              )}
            </div>
          ))}
        </div>
      </div>
      
      <!-- Experience -->
      <div>
        <h3 class="text-2xl font-serif font-semibold text-primary mb-6 flex items-center">
          <i class="fas fa-briefcase text-accent mr-3"></i>Work Experience
        </h3>
        <div class="space-y-6">
          <div class="relative pl-8 border-l-2 border-accent/30">
            <div class="absolute -left-2 top-0 w-4 h-4 rounded-full bg-accent"></div>
            <span class="text-sm text-accent font-medium">2025 - Present</span>
            <h4 class="text-lg font-semibold text-primary mt-1">Machine Learning Engineer</h4>
            <p class="text-gray-600">Moffitt Cancer Center</p>
            <p class="text-sm text-gray-500">Tampa, FL, USA</p>
          </div>
          <div class="relative pl-8 border-l-2 border-accent/30">
            <div class="absolute -left-2 top-0 w-4 h-4 rounded-full bg-accent/50"></div>
            <span class="text-sm text-accent font-medium">2022 - 2025</span>
            <h4 class="text-lg font-semibold text-primary mt-1">Graduate Research Fellow</h4>
            <p class="text-gray-600">University of South Florida / Moffitt Cancer Center</p>
            <p class="text-sm text-gray-500">Tampa, FL, USA</p>
          </div>
          <div class="relative pl-8 border-l-2 border-accent/30">
            <div class="absolute -left-2 top-0 w-4 h-4 rounded-full bg-accent/50"></div>
            <span class="text-sm text-accent font-medium">2020 - 2022</span>
            <h4 class="text-lg font-semibold text-primary mt-1">Graduate Research Fellow</h4>
            <p class="text-gray-600">Rowan University</p>
            <p class="text-sm text-gray-500">Glassboro, NJ, USA</p>
          </div>
          <div class="relative pl-8 border-l-2 border-accent/30">
            <div class="absolute -left-2 top-0 w-4 h-4 rounded-full bg-accent/50"></div>
            <span class="text-sm text-accent font-medium">2017 - 2019</span>
            <h4 class="text-lg font-semibold text-primary mt-1">Head of Network Analytics</h4>
            <p class="text-gray-600">Jazz VEON Company</p>
            <p class="text-sm text-gray-500">Islamabad, Pakistan</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
